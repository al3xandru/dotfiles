# https://mitxela.com/projects/dotfiles_management
function dotstatus() {
    for i in $(dotfiles ls-files); do
        echo -n "$(dotfiles -c color.status=always status $i -s | sed "s#$i##")"
        echo -e "\t$i\t\t$(dotfiles -c color.ui=always log -1 --format="%s" -- $i)"
    done
}

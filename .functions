# backup a file
function backup() {
    if [ -d "$1" ]; then
        local ndir="$(basename $1).`date +%Y%m%d%H%M`"
        mkdir $ndir 
        cp -R "$1/." "$ndir"
    else
        cp -v "$1"{,.`date +%Y%m%d%H%M`.${1##*.}}
    fi
}


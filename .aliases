# Detect which `ls` flavor is in use
if ls --time-style > /dev/null 2>&1; then # GNU `ls`
    lsflags='--color --time-style=+%Y-%m-%dT%H:%M:%S'
else # OS X `ls`
    lsflags="-GT --color=auto"
fi
# alias l='ls -1AFp ${lsflags}'
# alias ll='ls -AFlp ${lsflags}'
# alias lt='ls -AFlpt ${lsflags}'
exaflags="-F --time-style=long-iso --color auto"
alias l='eza ${exaflags} -1A'
alias ll='eza ${exaflags} -Al'
alias tree='eza ${exaflags} -T'
# lsdflags="--icon never -F --color auto"

" mapping conflicts: Preferences -> Editor -> Vim Emulation

set clipboard+=unnamed
set history=10000
set hlsearch
set ignorecase
set smartcase
set incsearch
set scrolloff=5
set visualbell
set noerrorbells
set showmode    " message on the status line to show current mode

" extensions
set surround

" gc and gcc
set commentary

" gr{motion}
set ReplaceWithRegister

" Objects: aa, ia
set argtextobj              " 
let g:argtextobj_pairs="(:),{:},[:]"

set ideajoin

" custom mappings
nnoremap j gj
vnoremap j gj
nnoremap k gk
vnoremap k gk

" inoremap <C-a> <C-o>A
inoremap <A-a> <C-o>A
inoremap <C-x> <C-o>

" handlers
sethandler <C-A> a:ide  " Emacs: go to beginning of line
sethandler <C-B> a:ide
sethandler <C-E> a:ide  " Emacs go to end of line
sethandler <C-F> a:ide
sethandler <C-H> a:ide  " Type hierarhcy
sethandler <C-I> a:ide  " Implement methods
sethandler <C-J> a:ide  " Quick documentation
sethandler <C-M> a:ide  " Move caret to matching brace
sethandler <C-O> a:ide  " Override methods
sethandler <C-R> a:ide  " Run
sethandler <C-T> a:ide  " Refactor thisâ€¦

"" scroll half screens
sethandler <C-D> n:vim i-v:ide 
sethandler <C-U> n:vim i-v:ide 
sethandler <C-V> a:vim
sethandler <C-W> a:vim

"" navigate the jump list
" sethandler <C-O> i-v:ide n:vim
" sethandler <C-I> i-v:ide n:vim
"" redo/pasting
" sethandler <C-R> n-v:ide i:vim




